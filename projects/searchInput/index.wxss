/* projects/searchInput/index.wxss */
page{
  background: #f5f5f5;
}
.searchbar{
   display: flex;
   position: fixed;
   top: 0;
   left: 0;
   width: 100%;
   height: 60rpx;
   padding: 15rpx;
   border-bottom: 1px solid #ccc;
   background: #fff;
   z-index:999;

}
.searchbar .search{
  flex: 8;
  color: #000;
}
.searchbar icon{
  flex: 1;
}
.searchcontent{
   margin-top: 120rpx; 
   background: #fff;
  
}
.searchcontent .item-content{
  display: flex;
    border-bottom: 1px solid #ccc;
    padding: 15rpx 25rpx;
    align-items: center;
}
.searchcontent .item-content image{
   width: 70rpx;
   height: 100rpx;
   margin-right:20rpx; 
}
.searchcontent .item-content .item-detail{
  flex: 1;
  font-size: 28rpx;
}
.searchcontent .item-content .item-detail .item-title{
  font-weight: bold;
  font-size: 32rpx;
  
}
