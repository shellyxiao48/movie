/* projects/moviePage/index.wxss */
.detailcontent{
  margin-top: 40rpx;
  padding: 0 30rpx;
}
.detailhead>view{
  font-size: 28rpx;
  color: #a0a0a1;
}
.detailhead .title{
  font-weight: bold;
  font-size: 45rpx;
}
.detailbtn{
  margin: 40rpx auto;
}
.detailbtn view{
  display: inline-block;
  width: 50%;  
  text-align: center;
}
.detailbtn text{
  padding: 8rpx 70rpx;
  border: 1px solid #e1a842;
  color: #e1a842;
  border-radius: 6px;
  font-size: 30rpx;
}
.summary{
  margin-bottom: 40rpx;
 
  
}
 .label{
  color: #a0a0a1;
}
.summary-content{
  text-indent: 70rpx;
  font-size: 28rpx;
  color: #727272;
}
.btn-show{
  color: #7be141;
  font-size: 32rpx;
}
.item{
  display: inline-block;  
  width: 140rpx;
  height: 200rpx;
  text-align: center;
}
.item:not(:first-of-type){
  margin-left: 15rpx;
}
.item image{
  width: 140rpx;
  height: 170rpx;
  border: 1px solid #ccc;
}
.castsname{
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detailhead{
  position: relative;
}
.movie-tag{
  position: absolute;
  right: 40rpx;
  top: 0;
  width: 140rpx;
  height: 120rpx;
  padding: 10rpx 0;
  border-radius: 6px;
  background: #fff;
  border: 2px solid #ccc;
  box-shadow: 1px 0 3px #ccc;
  text-align: center;

}
.movie-rate{
  margin: 0;
  margin-bottom:10rpx; 
  font-weight: bold;
  color: #000;
}
.ratings_count{
  font-size: 25rpx;
  margin-top: 10rpx;
}
.rating-stars{
  margin: 0 auto; 
}
.rating-wrapper{
  display: flex;
  flex-direction: column-reverse;
}